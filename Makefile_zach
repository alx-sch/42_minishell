

BLACK   = \033[0;30m
RED     = \033[0;31m
GREEN   = \033[0;32m
YELLOW  = \033[0;33m
BLUE    = \033[0;34m
MAGENTA = \033[0;35m
CYAN    = \033[0;36m
WHITE   = \033[0;37m
RESET   = \033[0m


CC = cc
FLAGS = -Wall -Werror -Wextra

SRC_DIR = ./src
SRC = $(addprefix $(SRC_DIR)/, \

)

OBJ_DIR = ./obj
OBJ = $(patsubst $(SRC_DIR)/%.c,$(OBJ_DIR)/%.o,$(SRC))

NAME = 

all = $(NAME)

$(NAME): $(OBJ) $(LIBS)
	@echo "$(GREEN) Compiling $(NAME)... $(RESET)"
	$(CC) $(CFLAGS) $(OBJ) $(LIBS) $(MLX_FLAGS) -o $(NAME)

obj/%.o:$(SRC_DIR)/%.c
	@echo "$(BLUE) Compiling $(OBJ)... $(RESET)"
	@mkdir -p $(OBJ_DIR)
	$(CC) $(CFLAGS) -c $< -o $@

clean
	@echo "$(RED) Deleting Objects... $(RESET)"
	@rm -f $(OBJ)

fclean: clean
	@echo "$(RED) Deleting $(NAME)... $RESET)"
	@rm -f $(NAME)

re: fclean all

.PHONY = all re clean fclean
